{
  "name": "smart-assist",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w apps/web",
    "dev:rag": "npm run dev -w rag",
    "build": "npm run build --workspaces --if-present",
    "db:generate": "npm run generate -w @smart-assist/db",
    "db:push": "npm run db:push -w @smart-assist/db",
    "db:studio": "npm run db:studio -w @smart-assist/db",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.11"
  },
  "engines": {
    "node": ">=18"
  }
}
