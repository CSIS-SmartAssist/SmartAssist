generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String
  passwordHash String
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  bookings     Booking[]
}

model Room {
  id        String    @id @default(cuid())
  name      String
  location  String
  capacity  Int
  amenities String[]
  bookings  Booking[]
}

model Booking {
  id        String        @id @default(cuid())
  userId    String
  roomId    String
  startTime DateTime
  endTime   DateTime
  reason    String
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  room      Room          @relation(fields: [roomId], references: [id])
  user      User          @relation(fields: [userId], references: [id])
}

model Document {
  id              String          @id @default(cuid())
  filename        String
  source          DocSource
  driveFileId     String?
  mimeType        String
  checksum        String?
  lastModified    DateTime?
  ingestionStatus IngestionStatus @default(PENDING)
  ingestedAt      DateTime?
  errorMessage    String?
  createdAt       DateTime        @default(now())
}

enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DocSource {
  DIRECT_UPLOAD
  GOOGLE_DRIVE
}

enum IngestionStatus {
  PENDING
  PROCESSING
  DONE
  FAILED
}
